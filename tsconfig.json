{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["src/app/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
